<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="abhinav.com.addresslatlong.TextOnImageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:background="#ececec">

                <ImageView
                    android:id="@+id/imgv_pickImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1.2"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/btn_pickImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pick Image From Gallery"/>

                    <TextView
                        android:id="@+id/txtv_imgWidth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Image Width :- 0 px"/>

                    <TextView
                        android:id="@+id/txtv_imgHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Image Width :- 0 px"/>

                    <EditText
                        android:id="@+id/edit_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Some Text"/>

                    <Button
                        android:id="@+id/btn_drawText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Draw Text"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#c9c9c9"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.8"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/imgv_y_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
                        android:layout_gravity="center"
                        android:padding="5dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgv_x_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                            android:layout_gravity="center"
                            android:padding="5dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/txtv_x_cordinate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="0"/>

                            <TextView
                                android:id="@+id/txtv_Y_cordinate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="25"/>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imgv_x_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:layout_gravity="center"
                            android:padding="5dp"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgv_y_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                        android:layout_gravity="center"
                        android:padding="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_weight="1"
                                android:text="Text Size" />

                            <TextView
                                android:id="@+id/txtv_textSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="0"/>

                        </LinearLayout>

                        <SeekBar
                            android:id="@+id/seekb_textSize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="25"
                            android:max="200" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#FF0000"
                                android:text="R"/>

                            <SeekBar
                                android:id="@+id/seekb_red"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:progress="12"
                                android:max="255"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#00FF00"
                                android:text="G"/>

                            <SeekBar
                                android:id="@+id/seekb_green"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:progress="12"
                                android:max="255"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#0000FF"
                                android:text="B"/>

                            <SeekBar
                                android:id="@+id/seekb_blue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:progress="12"
                                android:max="255"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgv_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                                android:padding="5dp"/>

                            <ImageView
                                android:id="@+id/imgv_up"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
                                android:layout_marginLeft="5dp"
                                android:padding="5dp"/>

                            <ImageView
                                android:id="@+id/imgv_down"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                                android:layout_marginLeft="5dp"
                                android:padding="5dp"/>

                            <ImageView
                                android:id="@+id/imgv_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                                android:layout_marginLeft="5dp"
                                android:padding="5dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/txtv_x_img"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="0"/>

                                <TextView
                                    android:id="@+id/txtv_y_img"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="25"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#000000"
                                android:text="Img Width"/>

                            <SeekBar
                                android:id="@+id/seekb_imgvWt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:progress="50"
                                android:max="300"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#000000"
                                android:text="Img Height"/>

                            <SeekBar
                                android:id="@+id/seekb_imgvHt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:progress="100"
                                android:max="300"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                </LinearLayout>

            </LinearLayout>

    </ScrollView>

</LinearLayout>
